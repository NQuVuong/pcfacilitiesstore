{# templates/detail.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ p.name }} — PC Store{% endblock %}

{% block body %}
<section class="bg-base-100">
  <div class="max-w-7xl mx-auto px-4 lg:px-8 py-6 space-y-10">

    <div class="flex items-center justify-between gap-3 mb-2">
      <div class="breadcrumbs text-sm">
        <ul>
          <li><a href="{{ path('app_homepage') }}">Home</a></li>
          {% if p.category %}
            <li><a href="{{ path('catalog', {cat: p.category.id}) }}">{{ p.category.name }}</a></li>
          {% endif %}
          <li>{{ p.name }}</li>
        </ul>
      </div>
      <button type="button" class="btn btn-ghost btn-sm" onclick="history.back()">← Back</button>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <div class="lg:col-span-5">
        <div class="card bg-base-100 border">
          <figure class="bg-base-200 aspect-square">
            {% set main = p.image ? asset('uploads/' ~ p.image) : asset('uploads/placeholder.png') %}
            <img id="mainImage" src="{{ main }}" alt="{{ p.name }}" class="w-full h-full object-contain p-3">
          </figure>
        </div>

        <div class="mt-3 flex gap-2 overflow-x-auto">
          <button class="btn btn-ghost btn-sm px-0 border rounded w-20 h-20 shrink-0" data-main="{{ main }}">
            <img src="{{ main }}" class="object-contain w-full h-full p-1" alt="">
          </button>
          {% for gi in p.images|default([]) %}
            {% set url = asset('uploads/' ~ gi.path) %}
            <button class="btn btn-ghost btn-sm px-0 border rounded w-20 h-20 shrink-0" data-main="{{ url }}">
              <img src="{{ url }}" class="object-contain w-full h-full p-1" alt="">
            </button>
          {% endfor %}
        </div>
      </div>

      <div class="lg:col-span-7">
        <div class="card bg-base-100 border">
          <div class="card-body space-y-4">
            <h1 class="text-2xl md:text-3xl font-semibold leading-tight">{{ p.name }}</h1>

            {% set latest = p.prices|first %}
            <div>
              {% if latest and latest.exportPrice is not null %}
                <div class="text-3xl font-extrabold text-primary">
                  {{ latest.exportPrice|number_format(0,'.',',') }} ₫
                </div>
              {% else %}
                <div class="text-xl text-base-content/50 italic">No price</div>
              {% endif %}
            </div>

            <div class="flex flex-wrap gap-2 text-xs">
              {% if p.category %}
                <span class="badge badge-ghost">{{ p.category.name }}</span>
              {% endif %}
              <span class="badge {{ p.quantity > 0 ? 'badge-success' : 'badge-error' }}">
                {{ p.quantity > 0 ? ('In stock: ' ~ p.quantity) : 'Out of stock' }}
              </span>

              {% if averageRating is not null %}
                <span class="badge badge-ghost flex items-center gap-1">
                  ⭐ {{ averageRating }}/5 ({{ reviews|length }} review{{ reviews|length > 1 ? 's' : '' }})
                </span>
              {% endif %}
            </div>

            <div class="divider my-3"></div>

            {# ============================== #
               ADD TO CART — ONLY FOR NORMAL USERS
               STAFF / ADMIN KHÔNG được add cart
               ============================== #}

            {% if not is_granted('ROLE_STAFF') and not is_granted('ROLE_ADMIN') %}
              <div class="flex flex-col sm:flex-row gap-4 items-stretch sm:items-end">

                <div>
                  <div class="label">
                    <span class="label-text text-sm">Quantity</span>
                  </div>
                  <div class="join">
                    <button type="button" class="btn btn-ghost join-item" id="qtyMinus">-</button>
                    <input id="qty" type="number" value="1" min="1"
                           class="input input-bordered join-item w-16 text-center" />
                    <button type="button" class="btn btn-ghost join-item" id="qtyPlus">+</button>
                  </div>
                </div>

                {% if latest and latest.exportPrice is not null and p.quantity > 0 %}
                  <form action="{{ path('app_cart_add', {id: p.id}) }}" method="post"
                        class="flex-1 flex items-end justify-start">
                    <input type="hidden" name="_token" value="{{ csrf_token('add_to_cart_' ~ p.id) }}">
                    <input type="hidden" id="qtyField" name="qty" value="1">
                    <button class="btn btn-primary w-full sm:w-auto h-12 px-8">
                      Add to cart
                    </button>
                  </form>
                {% else %}
                  <button class="btn btn-sm md:btn h-12" disabled>Not available</button>
                {% endif %}
              </div>

            {% else %}
              {# STAFF/ADMIN — Không được mua hàng #}
              <div class="alert alert-warning mt-3 shadow">
                Staff/Admin accounts cannot purchase products.
              </div>
            {% endif %}

          </div>
        </div>
      </div>
    </div>

    {# Specs + Description #}
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <div class="lg:col-span-5">
        <div class="card bg-base-100 border">
          <div class="card-body">
            <h2 class="card-title">Specifications</h2>

            {% set specs = p.specs ?? [] %}
            {% if specs|length > 0 %}
              <div class="overflow-x-auto">
                <table class="table w-full">
                  <tbody>
                    {% for item in specs %}
                      {% set k = item.key|default('') %}
                      {% set v = item.value|default('') %}
                      {% if k is not empty or v is not empty %}
                        <tr>
                          <th class="w-48 align-top">{{ k }}</th>
                          <td>{{ v|nl2br }}</td>
                        </tr>
                      {% endif %}
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            {% else %}
              <p class="text-base-content/70">No specifications.</p>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="lg:col-span-7">
        <div class="card bg-base-100 border">
          <div class="card-body prose max-w-none">
            <h2 class="card-title">Product overview</h2>

            {% set hasDesc = p.description is not empty %}
            <div id="descWrap" class="{{ hasDesc ? 'max-h-64 overflow-hidden' : '' }}">
              {% if hasDesc %}
                {{ p.description|raw }}
              {% else %}
                <p class="text-base-content/70">No description yet.</p>
              {% endif %}
            </div>

            {% if hasDesc %}
              <button id="btnToggleDesc" class="btn btn-ghost btn-sm mt-2">Show more</button>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    {# ======================== #
       Reviews — chỉ user bình thường được review
       ======================== #}

    <div class="grid gap-8 lg:grid-cols-12">
      <div class="lg:col-span-7">
        <div class="card bg-base-100 border">
          <div class="card-body space-y-4">
            <div class="flex items-center justify-between gap-3">
              <h2 class="card-title">Customer reviews</h2>
              {% if averageRating is not null %}
                <div class="text-sm text-base-content/80 flex items-center gap-1">
                  <span class="font-semibold">{{ averageRating }}/5</span>
                  <span>⭐</span>
                  <span class="text-xs text-base-content/60">
                    ({{ reviews|length }} review{{ reviews|length > 1 ? 's' : '' }})
                  </span>
                </div>
              {% endif %}
            </div>

            {% if is_granted('ROLE_USER') and not is_granted('ROLE_STAFF') and not is_granted('ROLE_ADMIN') %}
              <form method="post"
                    action="{{ path('product_review_add', { slug: p.slug }) }}"
                    class="space-y-3">
                <div class="flex items-center gap-3 flex-wrap">
                  <span class="text-sm font-medium">Your rating</span>
                  <div class="rating rating-sm">
                    {% for i in 1..5 %}
                      <input type="radio" name="rating" value="{{ i }}"
                             class="mask mask-star-2 bg-yellow-400"
                             {% if i == 5 %}checked{% endif %}/>
                    {% endfor %}
                  </div>
                </div>
                <textarea name="comment"
                          class="textarea textarea-bordered w-full"
                          rows="3"
                          placeholder="Share your experience (optional)..."></textarea>
                <button class="btn btn-primary btn-sm" type="submit">
                  Submit review
                </button>
              </form>
            {% else %}
              <p class="text-sm text-base-content/70">
                Only normal customers can write reviews.
              </p>
            {% endif %}

            <div class="divider my-2"></div>

            <div class="space-y-4 max-h-80 overflow-y-auto pr-1">
              {% for r in reviews %}
                <div class="border border-base-200 rounded-lg p-3">
                  <div class="flex items-center justify-between gap-2">
                    <div class="text-sm font-medium">
                      {{ r.user.fullName ?? r.user.email }}
                    </div>
                    <div class="text-xs text-base-content/60">
                      {{ r.createdAt|date('Y-m-d H:i') }}
                    </div>
                  </div>
                  <div class="text-xs text-amber-500 mt-1">
                    {% for i in 1..5 %}
                      {% if i <= r.rating %}★{% else %}☆{% endif %}
                    {% endfor %}
                  </div>
                  {% if r.comment %}
                    <p class="text-sm mt-1 whitespace-pre-line">{{ r.comment }}</p>
                  {% endif %}
                </div>
              {% else %}
                <p class="text-sm text-base-content/60">No reviews yet.</p>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>

      {% if relatedProducts is not empty %}
        <div class="lg:col-span-5">
          <div class="card bg-base-100 border">
            <div class="card-body">
              <h2 class="card-title text-sm mb-2">Related products</h2>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                {% for rp in relatedProducts|slice(0,4) %}
                  {% include '_components/product-card.html.twig' with { p: rp, specs_count: 2 } %}
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>

  </div>
</section>

<script>
  (function(){
    const main = document.getElementById('mainImage');
    document.querySelectorAll('[data-main]').forEach(b=>{
      b.addEventListener('click', ()=>{ main.src = b.dataset.main; });
    });

    const qtyInput = document.getElementById('qty');
    const qtyField = document.getElementById('qtyField');
    const minus = document.getElementById('qtyMinus');
    const plus  = document.getElementById('qtyPlus');

    const clamp = (v) => Math.max(1, parseInt(v || '1', 10));

    function sync() {
      const v = clamp(qtyInput.value);
      qtyInput.value = v;
      if (qtyField) qtyField.value = v;
    }

    if (qtyInput && qtyField) {
      qtyInput.addEventListener('input', sync);
      qtyInput.addEventListener('change', sync);
      minus?.addEventListener('click', () => {
        qtyInput.value = clamp(qtyInput.value) - 1;
        sync();
      });
      plus?.addEventListener('click', () => {
        qtyInput.value = clamp(qtyInput.value) + 1;
        sync();
      });
    }

    const wrap = document.getElementById('descWrap');
    const btn  = document.getElementById('btnToggleDesc');
    if (wrap && btn) {
      let open = false;
      btn.addEventListener('click', ()=>{
        open = !open;
        wrap.classList.toggle('max-h-64', !open);
        wrap.classList.toggle('overflow-hidden', !open);
        btn.textContent = open ? 'Show less' : 'Show more';
      });
    }
  })();
</script>
{% endblock %}
