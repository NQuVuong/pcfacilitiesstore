{% extends 'admin.html.twig' %}
{% block title %}Categories{% endblock %}

{% block body %}
<div class="bg-white rounded-lg shadow p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-xl font-semibold text-gray-900">Categories</h1>
    <a href="{{ path('category_new') }}"
       class="inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700">
      Add Category
    </a>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">ID</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Name</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Actions</th>
        </tr>
      </thead>

      <tbody class="bg-white divide-y divide-gray-200">
        {% for c in categories %}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ c.id }}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ c.name }}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <div class="flex items-center gap-4">
                <a href="{{ path('category_edit', {'id': c.id}) }}"
                   class="text-indigo-600 hover:text-indigo-900">Edit</a>

                <button type="button"
                        class="text-red-600 hover:text-red-800"
                        onclick="openConfirmModal(
                          '{{ path('category_delete', {'id': c.id}) }}',
                          '{{ c.name|e('js') }}',
                          '{{ csrf_token('delete_cat_' ~ c.id) }}'
                        )">
                  Delete
                </button>
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td class="px-6 py-4 text-sm text-gray-500" colspan="3">No categories.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{# Modal xác nhận xóa #}
<div id="confirm-modal"
     class="fixed inset-0 z-50 hidden items-center justify-center">
  <div class="absolute inset-0 bg-black/40"></div>
  <div class="relative w-full max-w-md rounded-xl bg-white shadow-xl">
    <div class="p-6">
      <h3 class="text-lg font-semibold text-gray-900">Xác nhận xóa</h3>
      <p class="mt-3 text-sm text-gray-700">
        Bạn có chắc muốn xóa <span id="del-name" class="font-semibold"></span> không?
      </p>
      <div class="mt-6 flex justify-end gap-3">
        <button type="button" id="btn-cancel"
                class="px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100">
          Hủy
        </button>
        <form id="del-form" method="post">
          <input type="hidden" name="_token" id="del-token" value="">
          <button type="submit"
                  class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700">
            Xóa
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    function openConfirmModal(action, name, token) {
      const modal   = document.getElementById('confirm-modal');
      const delName = document.getElementById('del-name');
      const delForm = document.getElementById('del-form');
      const delTok  = document.getElementById('del-token');

      delName.textContent = name;
      delForm.action = action;
      delTok.value = token;

      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }
    (function bindCloseHandlers() {
      const modal  = document.getElementById('confirm-modal');
      const cancel = document.getElementById('btn-cancel');
      function close() {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
      cancel.addEventListener('click', close);
      modal.addEventListener('click', (e) => { if (e.target === modal) close(); });
      document.addEventListener('keydown', (e) => { if (e.key === 'Escape') close(); });
    })();
  </script>
{% endblock %}
