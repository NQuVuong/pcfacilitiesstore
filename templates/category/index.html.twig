{% extends 'admin.html.twig' %}
{% block title %}Categories{% endblock %}

{% block body %}
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex flex-wrap items-center justify-between gap-3 mb-6">
      <div>
        <h1 class="text-xl font-semibold text-gray-900">Categories</h1>
        <p class="text-sm text-gray-500">
          {{ total }} categor{{ total == 1 ? 'y' : 'ies' }} in system.
        </p>
      </div>

      <div class="flex flex-wrap items-center gap-3">
        <form method="get" class="flex items-center gap-2">
          <input
            type="text"
            name="q"
            value="{{ q }}"
            placeholder="Search by category name"
            class="input input-bordered input-sm w-48 md:w-64"
          >
          <button class="btn btn-sm btn-primary" type="submit">Search</button>
          {% if q %}
            <a href="{{ path('category_index') }}" class="btn btn-sm btn-ghost">Clear</a>
          {% endif %}
        </form>

        <a href="{{ path('category_new') }}" class="btn btn-primary btn-sm">
          Add Category
        </a>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">ID</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Name</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Actions</th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        {% for c in categories %}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-3 text-sm text-gray-500">{{ c.id }}</td>
            <td class="px-6 py-3 text-sm text-gray-900">{{ c.name }}</td>
            <td class="px-6 py-3 text-sm">
              <div class="flex items-center gap-2">
                <a href="{{ path('category_edit', {id: c.id}) }}" class="btn btn-xs btn-outline">
                  Edit
                </a>
                <form method="post" action="{{ path('category_delete', {id: c.id}) }}">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete_cat_' ~ c.id) }}">
                  <button type="submit" class="btn btn-xs btn-error text-white">
                    Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="3" class="px-6 py-4 text-sm text-gray-500">No categories.</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>

    {% if pageCount > 1 %}
      {% set route = app.request.attributes.get('_route') %}
      {% set query = app.request.query.all %}
      <div class="mt-4 flex items-center justify-between text-sm text-gray-700">
        <div>Page {{ page }} / {{ pageCount }}</div>
        <div class="join">
          <a class="btn btn-sm join-item {{ page <= 1 ? 'btn-disabled' : '' }}"
             href="{{ page <= 1 ? '#' : path(route, query|merge({'page': page - 1})) }}">
            « Prev
          </a>
          <a class="btn btn-sm join-item {{ page >= pageCount ? 'btn-disabled' : '' }}"
             href="{{ page >= pageCount ? '#' : path(route, query|merge({'page': page + 1})) }}">
            Next »
          </a>
        </div>
      </div>
    {% endif %}
  </div>
{% endblock %}
