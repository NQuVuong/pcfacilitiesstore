{% extends 'admin.html.twig' %}

{% block title %}Brand Management{% endblock %}

{% block body %}
<div class="bg-white rounded-lg shadow p-6">
  <div class="flex flex-wrap items-center justify-between gap-3 mb-6">
    <div>
      <h1 class="text-xl font-semibold text-gray-900">Brands</h1>
      <p class="text-sm text-gray-500">
        {{ total }} brand{{ total == 1 ? '' : 's' }} in system.
      </p>
    </div>

    <div class="flex flex-wrap items-center gap-3">
      <form method="get" class="flex items-center gap-2">
        <input
          type="text"
          name="q"
          value="{{ q }}"
          placeholder="Search by brand name"
          class="input input-bordered input-sm w-48 md:w-64"
        >
        <button class="btn btn-sm btn-primary" type="submit">Search</button>
        {% if q %}
          <a href="{{ path('brand_index') }}" class="btn btn-sm btn-ghost">Clear</a>
        {% endif %}
      </form>

      <a href="{{ path('brand_new') }}" class="btn btn-primary btn-sm">
        Add Brand
      </a>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide">ID</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wide">Name</th>
          <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wide">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        {% for b in brands %}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 text-sm text-gray-500">{{ b.id }}</td>
            <td class="px-6 py-4 text-sm text-gray-900">{{ b.name }}</td>
            <td class="px-6 py-4 text-sm text-right">
              <div class="inline-flex gap-2">
                <a href="{{ path('brand_edit', {id: b.id}) }}" class="btn btn-sm btn-outline">Edit</a>
                <form method="post" action="{{ path('brand_delete', {id: b.id}) }}"
                      onsubmit="return confirm('Delete this brand?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete_brand_' ~ b.id) }}">
                  <button type="submit" class="btn btn-sm btn-error btn-outline">Delete</button>
                </form>
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="3" class="px-6 py-4 text-sm text-gray-500">No brands.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  {% if pageCount > 1 %}
    {% set route = app.request.attributes.get('_route') %}
    {% set query = app.request.query.all %}
    <div class="mt-4 flex items-center justify-between text-sm text-gray-700">
      <div>Page {{ page }} / {{ pageCount }} ({{ total }} brands)</div>
      <div class="join">
        <a class="btn btn-sm join-item {{ page <= 1 ? 'btn-disabled' }}"
           href="{{ page <= 1 ? '#' : path(route, query|merge({'page': page - 1})) }}">
          « Prev
        </a>
        <a class="btn btn-sm join-item {{ page >= pageCount ? 'btn-disabled' }}"
           href="{{ page >= pageCount ? '#' : path(route, query|merge({'page': page + 1})) }}">
          Next »
        </a>
      </div>
    </div>
  {% endif %}
</div>
{% endblock %}
