{% extends 'base.html.twig' %}
{% block title %}MoMo payment{% endblock %}
{% block body %}
<div class="max-w-xl mx-auto mt-10 bg-white shadow rounded p-6 text-center">
  {% if resultCode == 0 %}
    <h1 class="text-2xl font-semibold text-green-600">Thanh toán MoMo thành công!</h1>
    <p class="mt-2">Cảm ơn bạn đã mua hàng.</p>
  {% else %}
    <h1 class="text-2xl font-semibold text-red-600">Thanh toán MoMo không thành công</h1>
    <p class="mt-2 text-gray-600">{{ message }}</p>
  {% endif %}
  <a href="{{ path('app_orders_index') }}" class="btn btn-primary mt-6">Xem đơn hàng</a>
</div>
{% endblock %}
