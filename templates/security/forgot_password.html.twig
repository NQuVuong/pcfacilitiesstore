{% extends 'registration/base.html.twig' %}
{% block title %}Forgot Password{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-sm border border-gray-100 p-7">

    <h1 class="text-xl font-semibold mb-4 text-center">Forgot your password?</h1>
    <p class="text-sm text-gray-600 mb-4 text-center">
      Enter your email and we will send you a reset link.
    </p>

    <form method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-900">Email</label>
        <input name="email" type="email" required
               class="mt-2 block w-full rounded-lg border border-gray-200 px-3.5 py-2.5" />
      </div>

      <button class="w-full rounded-lg bg-violet-600 text-white py-2.5 font-semibold hover:bg-violet-700">
        Send reset link
      </button>
    </form>

    <p class="text-center text-sm text-gray-500 mt-4">
      <a href="{{ path('app_login') }}" class="text-violet-600 hover:underline">Back to login</a>
    </p>

  </div>
</div>
{% endblock %}
