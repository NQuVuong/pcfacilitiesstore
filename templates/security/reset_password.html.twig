{% extends 'registration/base.html.twig' %}
{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-sm border border-gray-100 p-7">
    <h1 class="text-xl font-semibold mb-4">Set a new password</h1>

    <form method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-900">New password</label>
        <input name="password" type="password" required minlength="6"
               class="mt-2 block w-full rounded-lg border border-gray-200 px-3.5 py-2.5" />
      </div>

      <button type="submit"
              class="w-full rounded-lg bg-violet-600 px-4 py-2.5 text-white font-semibold hover:bg-violet-700">
        Update password
      </button>
    </form>
  </div>
</div>
{% endblock %}
