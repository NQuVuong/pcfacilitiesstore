{% extends 'admin.html.twig' %}

{% block title %}{{ title|default('Add / Edit Product') }}{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto mt-6">
  <div class="bg-white rounded-lg shadow p-6">
    {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data' } }) }}

      {# Product Name #}
      <div class="mb-5">
        <label class="block mb-2 text-sm font-medium text-gray-900">Product Name</label>
        {{ form_widget(form.name) }}
      </div>

      {# Category Dropdown #}
      <div class="mb-5">
        <label class="block mb-2 text-sm font-medium text-gray-900">Category</label>
        {{ form_widget(form.category) }}  
      </div>

      {# Brand Dropdown #}
      <div class="mb-5">
        <label class="block mb-2 text-sm font-medium text-gray-900">Brand</label>
        {{ form_widget(form.brand) }}
      </div>

      {# Import Price chỉ hiển thị khi tạo mới (is_edit = false) #}
      {% if form.importPrice is defined %}
        <div class="mb-5">
          <label class="block mb-2 text-sm font-medium text-gray-900">Import Price</label>
          {{ form_widget(form.importPrice) }}
        </div>
      {% endif %}

      {# Quantity #}
      <div class="mb-5">
        <label class="block mb-2 text-sm font-medium text-gray-900">Quantity</label>
        {{ form_widget(form.quantity) }}
      </div>

      {# Created Date (auto set nếu null) #}
      <div class="mb-5">
        <label class="block mb-2 text-sm font-medium text-gray-900">Created Date</label>
        {{ form_widget(form.created, {
          'attr': {
            'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
                      focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'
          }
        }) }}
      </div>

      {# Product Image Upload #}
      <div class="mb-5">
        <label class="block mb-2 text-sm font-medium text-gray-900">Product Image</label>
        <div class="flex items-center justify-center w-full">
          {{ form_widget(form.file, {
            'attr': {
              'class': 'block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 
                        focus:outline-none file:mr-4 file:py-2 file:px-4 file:border-0 
                        file:text-sm file:font-semibold file:bg-gray-800 file:text-white hover:file:bg-gray-700',
              'id': 'file_upload'
            }
          }) }}
        </div>
        {{ form_widget(form.image) }}
      </div>

      {# Action Buttons #}
      <div class="flex gap-2">
        {{ form_widget(form.save) }}
        <a href="{{ path('app_product_index') }}"
           class="text-gray-700 bg-gray-200 hover:bg-gray-300 focus:ring-4 
                  focus:outline-none focus:ring-gray-300 font-medium rounded-lg 
                  text-sm px-5 py-2.5 text-center">Cancel</a>
      </div>

    {{ form_end(form) }}
  </div>
</div>
{% endblock %}